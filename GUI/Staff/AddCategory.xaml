<Window x:Class="GUI.Staff.AddCategory"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI.Staff"
        mc:Ignorable="d"
        Title="AddCategory" Height="140" Width="270" WindowStartupLocation="CenterOwner" WindowStyle="SingleBorderWindow">


    <Grid Background="#FF434343" Margin="0,0,-5,-6">
        <StackPanel Margin="5,0,7,7">
            <TextBlock Text="Ny kategori:" Foreground="White" Padding="5" FontSize="15" FontFamily="Bahnschrift SemiLight SemiCondensed"></TextBlock>
            <TextBox x:Name="tb_NewCategory" FontFamily="Bahnschrift SemiLight SemiCondensed" FontSize="12" Padding="4"></TextBox>
            <Button x:Name="AddCategoryButton" Content="Lägg till" Click="AddCategoryButton_Click" Height="33" Width="226" Foreground="Black" Background="DarkGray" BorderBrush="WhiteSmoke" FontFamily="Bahnschrift SemiLight SemiCondensed" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>
